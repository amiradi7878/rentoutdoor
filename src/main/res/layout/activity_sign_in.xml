<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_blur_wallpaper"
    android:orientation="vertical"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/crossImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/value_20dp"
            android:src="@drawable/ic_cross_normal" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:padding="@dimen/value_10dp"
            android:src="@drawable/ic_logo_drawer" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Developed By Moh Amiradi "
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Amolpedia Dev @ 2016"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAOD adalah aplikasi yang menyediakan informasi mengenai rental Peralatan outdoor di Yogyakarta dan sekitarnya. Kedepan re-bill akan semakin berbenah untuk memberikan data lebih lengkap dan akurat di area Semarang, Solo dan Jogja"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15" />


</LinearLayout>