<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigation_background"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="com.gook.raod.com.gook.raod.fragment.NavigationDrawerFragment">


    <ImageView
        android:id="@+id/logoImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/value_10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:padding="@dimen/value_10dp"
        android:src="@drawable/ic_logo_drawer" />

    <TextView
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_10dp"
        android:layout_marginLeft="@dimen/value_15dp"
        android:layout_marginRight="@dimen/value_15dp"
        android:layout_marginTop="@dimen/value_10dp"
        style="@style/btnDeepSelection"
        android:textColor="#FFFFFF"
        android:text="Call Us"/>

    <TextView
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_10dp"
        android:layout_marginLeft="@dimen/value_15dp"
        android:layout_marginRight="@dimen/value_15dp"
        android:layout_marginTop="@dimen/value_10dp"
        style="@style/btnDeepSelection"
        android:textColor="#FFFFFF"
        android:text="About"/>

    <TextView
        android:id="@+id/btnRateUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_10dp"
        android:layout_marginLeft="@dimen/value_15dp"
        android:layout_marginRight="@dimen/value_15dp"
        android:layout_marginTop="@dimen/value_10dp"
        style="@style/btnDeepSelection"
        android:textColor="#FFFFFF"
        android:text="Rate This App"/>





</LinearLayout>
