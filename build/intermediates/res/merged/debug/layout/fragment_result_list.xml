<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/result_list_background_color"
    tools:context="com.gook.raod.com.gook.raod.fragment.ResultListFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/resultListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/result_list_background_color"
            android:dividerHeight="5dp"
            android:scrollbars="none"
            android:layout_marginLeft="@dimen/value_5dp"
            android:layout_marginRight="@dimen/value_5dp"
            android:layout_marginBottom="@dimen/value_5dp"
            android:layout_below="@+id/view" />

    </android.support.v4.widget.SwipeRefreshLayout>


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view">
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Loading....."
        android:id="@+id/progText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>